{% extends "admin/base_admin.html.twig" %}

{% block header_title %}My Profile{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    <!-- Profile Header Section -->
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-100">
        <div class="px-8 py-8">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-8 ml-3">
                <div class="flex items-center gap-6">
                    <div class="w-26 h-26 bg-primary-50 flex items-center justify-center rounded-full font-bold text-2xl overflow-hidden ring-2 ring-primary-200">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            {% if app.user.profileImage %}
                                <img src="{{ asset(app.user.profileImage) }}" alt="Profile" class="w-full h-full object-cover">
                            {% else %}
                                <span class="text-bright-green">{{ app.user.firstName ? app.user.firstName|first|upper : app.user.email|first|upper }}</span>
                            {% endif %}
                        {% else %}
                            <span class="text-bright-green">A</span>
                        {% endif %}
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-dark-forest-green">
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                {{ app.user.firstName }} {{ app.user.lastName }}
                            {% else %}
                                User Profile
                            {% endif %}
                        </h1>
                        <p class="text-light-gray text-sm mt-1">{{ app.user.email }}</p>
                    </div>
                </div>
                <div class="flex flex-col items-start md:items-end gap-2 pt-2 md:pt-0">
                    <span class="inline-block px-3 py-1 bg-primary-50 text-bright-green text-xs font-semibold rounded-lg">Admin Account</span>
                    <p class="text-light-gray text-sm">Account Management</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Profile Form Section -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Profile Information -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-2xl shadow-lg p-6 space-y-6">
                <!-- Upload Photo Section -->
                <div class="border-b pb-6">
                    <h3 class="text-lg font-semibold text-dark-forest-green mb-4">Profile Photo</h3>
                    <div class="flex items-center gap-6">
                        <div class="w-24 h-24 bg-gradient-to-br from-bright-green to-primary-600 text-white flex items-center mb-2 justify-center rounded-xl font-semibold text-2xl overflow-hidden relative group">
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                {% if app.user.profileImage %}
                                    <img id="profile-preview-large" src="{{ asset(app.user.profileImage) }}" alt="Profile" class="w-full h-full object-cover">
                                {% else %}
                                    <span id="profile-initials-large">{{ app.user.firstName ? app.user.firstName|first|upper : app.user.email|first|upper }}</span>
                                {% endif %}
                            {% else %}
                                <span id="profile-initials-large">A</span>
                            {% endif %}
                            <button type="button" id="upload-photo-btn-large" class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                                <ion-icon name="cloud-upload-outline" class="text-white text-2xl"></ion-icon>
                            </button>
                        </div>
                        <div>
                            <input type="file" id="profile-image-input-large" accept="image/*" class="hidden">
                            <p class="text-sm text-light-gray mb-2">JPG, PNG, GIF up to 10MB</p>
                            <button type="button" id="change-photo-btn" class="px-4 py-2 bg-bright-green text-white rounded-lg hover:bg-green-600 transition-colors duration-200 text-sm font-medium">
                                Change Photo
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Personal Information Form -->
                <form id="profile-form-main" class="space-y-4 mt-2">
                    <h3 class="text-lg font-semibold text-dark-forest-green mb-4">Personal Information</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="profile-first-name-main" class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                            <input type="text" id="profile-first-name-main" name="firstName" required
                                   value="{{ is_granted('IS_AUTHENTICATED_FULLY') ? app.user.firstName : '' }}"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent transition-colors">
                        </div>
                        <div>
                            <label for="profile-last-name-main" class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                            <input type="text" id="profile-last-name-main" name="lastName" required
                                   value="{{ is_granted('IS_AUTHENTICATED_FULLY') ? app.user.lastName : '' }}"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent transition-colors">
                        </div>
                    </div>

                    <div>
                        <label for="profile-email-main" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                        <input type="email" id="profile-email-main" name="email" required
                               value="{{ is_granted('IS_AUTHENTICATED_FULLY') ? app.user.email : '' }}"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent transition-colors">
                    </div>

                    <div>
                        <label for="profile-phone-main" class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                        <input type="tel" id="profile-phone-main" name="phone"
                               value="{{ is_granted('IS_AUTHENTICATED_FULLY') ? app.user.phone : '' }}"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent transition-colors">
                    </div>

                    <div class="flex items-center justify-end gap-3 pt-4">
                        <button type="button" id="cancel-profile-main" class="px-6 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors duration-200">
                            Cancel
                        </button>
                        <button type="submit" class="px-6 py-2 text-sm font-medium text-white bg-bright-green rounded-lg hover:bg-green-600 transition-colors duration-200">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Password Change Section -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-2xl shadow-lg p-6">
                <h3 class="text-lg font-semibold text-dark-forest-green mb-4">Change Password</h3>
                <form id="password-form-main" class="space-y-4">
                    <div>
                        <label for="current-password-main" class="block text-sm font-medium text-gray-700 mb-2">Current Password</label>
                        <div class="relative">
                            <input type="password" id="current-password-main" name="currentPassword"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent transition-colors text-sm">
                            <button type="button" class="absolute inset-y-0 right-2 flex items-center text-gray-500 toggle-password" data-target="current-password-main" aria-label="Toggle current password visibility">
                                <ion-icon name="eye-off-outline" class="text-lg" aria-hidden="true"></ion-icon>
                            </button>
                        </div>
                    </div>
                    <div>
                        <label for="new-password-main" class="block text-sm font-medium text-gray-700 mb-2">New Password</label>
                        <div class="relative">
                            <input type="password" id="new-password-main" name="newPassword"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent transition-colors text-sm">
                            <button type="button" class="absolute inset-y-0 right-2 flex items-center text-gray-500 toggle-password" data-target="new-password-main" aria-label="Toggle new password visibility">
                                <ion-icon name="eye-off-outline" class="text-lg" aria-hidden="true"></ion-icon>
                            </button>
                        </div>
                        <p class="text-xs text-light-gray mt-1">At least 8 characters</p>
                    </div>
                    <div>
                        <label for="confirm-password-main" class="block text-sm font-medium text-gray-700 mb-2">Confirm New Password</label>
                        <div class="relative">
                            <input type="password" id="confirm-password-main" name="confirmPassword"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent transition-colors text-sm">
                            <button type="button" class="absolute inset-y-0 right-2 flex items-center text-gray-500 toggle-password" data-target="confirm-password-main" aria-label="Toggle confirm password visibility">
                                <ion-icon name="eye-off-outline" class="text-lg" aria-hidden="true"></ion-icon>
                            </button>
                        </div>
                    </div>

                    <button type="submit" class="w-full px-4 py-2 text-sm font-medium text-white bg-bright-green rounded-lg hover:bg-green-600 transition-colors duration-200">
                        Update Password
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Password Change Confirmation Modal -->
<div id="password-confirm-modal" class="fixed inset-0 z-50 hidden backdrop-blur-md" style="display: none;">
    <div class="absolute inset-0 bg-black/40 backdrop-blur-md"></div>
    <div class="absolute inset-0 flex items-center justify-center">
        <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full mx-4 transform transition-all relative z-10">
            <!-- Modal Header -->
            <div class="flex items-center gap-4 mb-4">
                <div class="w-12 h-12 rounded-full bg-yellow-100 flex items-center justify-center">
                    <ion-icon name="warning-outline" class="text-2xl text-yellow-600"></ion-icon>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-dark-forest-green">Confirm Password Change</h3>
                    <p class="text-xs text-light-gray">This action cannot be undone</p>
                </div>
            </div>

            <!-- Modal Content -->
            <p class="text-sm text-light-gray mb-6">
                Are you sure you want to change your password? You'll need to log in again with your new password.
            </p>

            <!-- Modal Actions -->
            <div class="flex gap-3">
                <button id="password-cancel-btn" class="flex-1 px-4 py-2.5 rounded-lg bg-gray-100 hover:bg-gray-200 text-dark-forest-green font-medium transition-colors duration-200">
                    Cancel
                </button>
                <button id="password-confirm-btn" class="flex-1 px-4 py-2.5 rounded-lg bg-bright-green hover:bg-green-600 text-white font-medium transition-colors duration-200">
                    Change Password
                </button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Photo upload handlers
    const uploadPhotoBtn = document.getElementById('upload-photo-btn-large');
    const changePhotoBtn = document.getElementById('change-photo-btn');
    const profileImageInput = document.getElementById('profile-image-input-large');

    uploadPhotoBtn?.addEventListener('click', function() {
        profileImageInput.click();
    });

    changePhotoBtn?.addEventListener('click', function() {
        profileImageInput.click();
    });

    profileImageInput?.addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(event) {
                const previewLarge = document.getElementById('profile-preview-large');
                const initialsLarge = document.getElementById('profile-initials-large');
                
                if (previewLarge) {
                    previewLarge.src = event.target.result;
                } else {
                    const img = document.createElement('img');
                    img.id = 'profile-preview-large';
                    img.src = event.target.result;
                    img.className = 'w-full h-full object-cover';
                    img.alt = 'Profile';
                    
                    const profileDiv = uploadPhotoBtn.parentElement;
                    if (initialsLarge) initialsLarge.remove();
                    profileDiv.appendChild(img);
                }
            };
            reader.readAsDataURL(file);
        }
    });

    // Profile form submission
    document.getElementById('profile-form-main')?.addEventListener('submit', function(e) {
        e.preventDefault();

        const formData = new FormData();
        formData.append('firstName', document.getElementById('profile-first-name-main').value);
        formData.append('lastName', document.getElementById('profile-last-name-main').value);
        formData.append('email', document.getElementById('profile-email-main').value);
        formData.append('phone', document.getElementById('profile-phone-main').value);
        
        if (profileImageInput.files[0]) {
            formData.append('profileImage', profileImageInput.files[0]);
        }

        Swal.fire({
            title: 'Updating Profile...',
            text: 'Please wait',
            icon: 'info',
            allowOutsideClick: false,
            allowEscapeKey: false,
            showConfirmButton: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        // Also show custom loading modal
        const loadingModal = document.createElement('div');
        loadingModal.id = 'profile-loading-modal';
        loadingModal.className = 'fixed inset-0 z-50 backdrop-blur-md';
        loadingModal.style.display = 'flex';
        loadingModal.innerHTML = `
            <div class="absolute inset-0 bg-black/40 backdrop-blur-md"></div>
            <div class="absolute inset-0 flex items-center justify-center">
                <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-sm w-full mx-4 text-center relative z-10">
                    <div class="flex justify-center mb-4">
                        <div class="w-12 h-12 rounded-full border-4 border-gray-200 border-t-bright-green animate-spin"></div>
                    </div>
                    <h3 class="text-lg font-semibold text-dark-forest-green mb-2">Updating Profile</h3>
                    <p class="text-sm text-light-gray">Please wait while we save your changes...</p>
                </div>
            </div>
        `;
        document.body.appendChild(loadingModal);
        Swal.close();

        fetch('/admin/api/profile/update', {
            method: 'POST',
            body: formData,
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            const loadingModal = document.getElementById('profile-loading-modal');
            if (loadingModal) loadingModal.remove();
            
            if (data.success) {
                Swal.fire({
                    title: 'Success!',
                    text: data.message,
                    icon: 'success',
                    confirmButtonColor: '#03A64A'
                }).then(() => {
                    location.reload();
                });
            } else {
                Swal.fire({
                    title: 'Error!',
                    text: data.message,
                    icon: 'error',
                    confirmButtonColor: '#d33'
                });
            }
        })
        .catch(error => {
            const loadingModal = document.getElementById('profile-loading-modal');
            if (loadingModal) loadingModal.remove();
            
            console.error('Error:', error);
            Swal.fire({
                title: 'Error!',
                text: 'An error occurred while updating profile',
                icon: 'error',
                confirmButtonColor: '#d33'
            });
        });
    });

    // Password form submission
    let pendingPasswordData = null;
    
    document.getElementById('password-form-main')?.addEventListener('submit', function(e) {
        e.preventDefault();

        const currentPassword = document.getElementById('current-password-main').value;
        const newPassword = document.getElementById('new-password-main').value;
        const confirmPassword = document.getElementById('confirm-password-main').value;

        // Validation
        if (!currentPassword) {
            Swal.fire({
                title: 'Error!',
                text: 'Current password is required',
                icon: 'error',
                confirmButtonColor: '#d33'
            });
            return;
        }

        if (!newPassword) {
            Swal.fire({
                title: 'Error!',
                text: 'New password is required',
                icon: 'error',
                confirmButtonColor: '#d33'
            });
            return;
        }

        if (newPassword !== confirmPassword) {
            Swal.fire({
                title: 'Error!',
                text: 'New passwords do not match',
                icon: 'error',
                confirmButtonColor: '#d33'
            });
            return;
        }

        if (newPassword.length < 8) {
            Swal.fire({
                title: 'Error!',
                text: 'New password must be at least 8 characters',
                icon: 'error',
                confirmButtonColor: '#d33'
            });
            return;
        }

        // Store data and show confirmation modal
        pendingPasswordData = {
            currentPassword: currentPassword,
            newPassword: newPassword
        };
        
        document.getElementById('password-confirm-modal').style.display = 'flex';
    });

        fetch('/admin/api/profile/password', {
            method: 'POST',
            body: formData,
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            const loadingModal = document.getElementById('password-loading-modal');
            if (loadingModal) loadingModal.remove();
            
            if (data.success) {
                Swal.fire({
                    title: 'Success!',
                    text: data.message,
                    icon: 'success',
                    confirmButtonColor: '#03A64A'
                }).then(() => {
                    // Clear form
                    document.getElementById('password-form-main').reset();
                    pendingPasswordData = null;
                });
            } else {
                Swal.fire({
                    title: 'Error!',
                    text: data.message,
                    icon: 'error',
                    confirmButtonColor: '#d33'
                });
            }
        })
        .catch(error => {
            const loadingModal = document.getElementById('password-loading-modal');
            if (loadingModal) loadingModal.remove();
            
            console.error('Error:', error);
            Swal.fire({
                title: 'Error!',
                text: 'An error occurred while updating password',
                icon: 'error',
                confirmButtonColor: '#d33'
            });
        });
    });
    
    // Password confirmation modal handlers
    const passwordConfirmModal = document.getElementById('password-confirm-modal');
    const passwordCancelBtn = document.getElementById('password-cancel-btn');
    const passwordConfirmBtn = document.getElementById('password-confirm-btn');
    
    passwordCancelBtn?.addEventListener('click', function() {
        passwordConfirmModal.style.display = 'none';
        pendingPasswordData = null;
    });
    
    passwordConfirmBtn?.addEventListener('click', function() {
        if (!pendingPasswordData) return;
        
        passwordConfirmModal.style.display = 'none';
        
        // Show custom loading modal
        const loadingModal = document.createElement('div');
        loadingModal.id = 'password-loading-modal';
        loadingModal.className = 'fixed inset-0 z-50 backdrop-blur-md';
        loadingModal.style.display = 'flex';
        loadingModal.innerHTML = `
            <div class="absolute inset-0 bg-black/40 backdrop-blur-md"></div>
            <div class="absolute inset-0 flex items-center justify-center">
                <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-sm w-full mx-4 text-center relative z-10">
                    <div class="flex justify-center mb-4">
                        <div class="w-12 h-12 rounded-full border-4 border-gray-200 border-t-bright-green animate-spin"></div>
                    </div>
                    <h3 class="text-lg font-semibold text-dark-forest-green mb-2">Updating Password</h3>
                    <p class="text-sm text-light-gray">Please wait while we change your password...</p>
                </div>
            </div>
        `;
        document.body.appendChild(loadingModal);
        
        const formData = new FormData();
        formData.append('currentPassword', pendingPasswordData.currentPassword);
        formData.append('newPassword', pendingPasswordData.newPassword);

    // Cancel button
    document.getElementById('cancel-profile-main')?.addEventListener('click', function() {
        window.history.back();
    });

    // Password visibility toggles
    document.querySelectorAll('.toggle-password').forEach(function(btn) {
        btn.addEventListener('click', function() {
            const targetId = btn.dataset.target;
            const input = document.getElementById(targetId);
            if (!input) return;
            if (input.type === 'password') {
                input.type = 'text';
                const icon = btn.querySelector('ion-icon');
                if (icon) icon.setAttribute('name', 'eye-outline');
            } else {
                input.type = 'password';
                const icon = btn.querySelector('ion-icon');
                if (icon) icon.setAttribute('name', 'eye-off-outline');
            }
        });
    });
    
    // Close password modal when clicking outside
    passwordConfirmModal?.addEventListener('click', function(e) {
        if (e.target === passwordConfirmModal) {
            passwordConfirmModal.style.display = 'none';
            pendingPasswordData = null;
        }
    });
    
    // Close password modal on Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && passwordConfirmModal && passwordConfirmModal.style.display !== 'none') {
            passwordConfirmModal.style.display = 'none';
            pendingPasswordData = null;
        }
    });
});
</script>
{% endblock %}
