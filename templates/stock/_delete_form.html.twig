{% if is_granted('STOCK_DELETE', stock) %}
    <div id="delete-stock-modal-{{ stock.id }}" class="fixed inset-0 z-50 hidden backdrop-blur-md" style="display: none;">
        <div class="absolute inset-0 bg-black/40 backdrop-blur-md"></div>
        <div class="absolute inset-0 flex items-center justify-center">
            <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full mx-4 transform transition-all relative z-10">
                <div class="flex items-center gap-4 mb-4">
                    <div class="w-12 h-12 rounded-full bg-red-100 flex items-center justify-center">
                        <ion-icon name="alert-circle-outline" class="text-2xl text-red-600"></ion-icon>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-dark-forest-green">Delete Stock Entry</h3>
                        <p class="text-xs text-light-gray">This action cannot be undone</p>
                    </div>
                </div>
                <p class="text-sm text-light-gray mb-6">Are you sure you want to delete this stock entry? This action cannot be undone.</p>
                <div class="flex gap-3">
                    <button class="delete-stock-cancel-{{ stock.id }} flex-1 px-4 py-2.5 rounded-lg bg-gray-100 hover:bg-gray-200 text-dark-forest-green font-medium transition-colors duration-200">
                        Cancel
                    </button>
                    <form id="delete-stock-form-{{ stock.id }}" method="post" action="{{ path('app_stock_delete', {'id': stock.id}) }}" class="flex-1">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock.id) }}">
                        <button type="submit" class="w-full px-4 py-2.5 rounded-lg bg-red-600 hover:bg-red-700 text-white font-medium transition-colors duration-200">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <button type="button" 
            onclick="document.getElementById('delete-stock-modal-{{ stock.id }}').style.display = 'flex';"
            class="btn-danger w-full flex items-center justify-center gap-2 text-sm">
        <ion-icon name="trash-outline" class="text-sm"></ion-icon>
        Delete Stock
    </button>
    
    <script>
    (function() {
        const modal = document.getElementById('delete-stock-modal-{{ stock.id }}');
        const cancelBtn = modal.querySelector('.delete-stock-cancel-{{ stock.id }}');
        
        function closeModal() {
            modal.style.display = 'none';
            modal.classList.add('hidden');
        }
        
        cancelBtn.addEventListener('click', closeModal);
        
        modal.addEventListener('click', function(e) {
            if (e.target === modal || e.target.classList.contains('bg-black/40')) {
                closeModal();
            }
        });
        
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && modal.style.display !== 'none') {
                closeModal();
            }
        });
    })();
    </script>
{% else %}
    <button type="button" 
            disabled
            class="btn-danger w-full flex items-center justify-center gap-2 text-sm opacity-50 cursor-not-allowed"
            title="You can only delete stock entries you created">
        <ion-icon name="trash-outline" class="text-sm"></ion-icon>
        Delete Stock
    </button>
{% endif %}
