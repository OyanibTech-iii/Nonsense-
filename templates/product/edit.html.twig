{% extends 'user_page/base_user.html.twig' %}

{% block title %}Edit {{ product.name }} - Growfico{% endblock %}

{% block user_content %}
	<div class="w-full">
		<!-- Header Section -->
		<div class="bg-white shadow-sm border-b border-gray-200 rounded-xl">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
				<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
					<div>
						<h1 class="text-heading font-bold text-dark-forest-green font-sans">Edit Product</h1>
						<p class="mt-2 text-light-gray text-base">Update the details for {{ product.name }}</p>
					</div>
					{# <div class="mt-4 sm:mt-0 flex space-x-3">
						<a href="{{ path('app_product_show', {'id': product.id}) }}" class="inline-flex items-center px-4 py-2 bg-gray-100 text-dark-forest-green font-semibold rounded-lg hover:bg-gray-200 transition-colors duration-200">
							<ion-icon name="eye-outline" class="w-4 h-4 mr-2"></ion-icon>
							View Product
						</a>
						<a href="{{ path('app_product_index') }}" class="inline-flex items-center px-4 py-2 bg-gray-100 text-dark-forest-green font-semibold rounded-lg hover:bg-gray-200 transition-colors duration-200">
							<ion-icon name="arrow-back-outline" class="w-4 h-4 mr-2"></ion-icon>
							Back to Products
						</a>
					</div> #}
				</div>
			</div>
		</div>

		<!-- Form Section -->
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			{{ include('product/_form.html.twig', {'button_label': 'Update Product'}) }}
		</div>

		<!-- Delete Section -->
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pb-8">
			<div class="bg-red-50 border border-red-200 rounded-xl p-6">
				<div class="flex items-start">
					<div class="flex-shrink-0">
						<ion-icon name="warning-outline" class="w-6 h-6 text-red-600"></ion-icon>
					</div>
					<div class="ml-3 flex-1">
						<h3 class="text-heading font-semibold text-red-800 mb-2">Danger Zone</h3>
						<p class="text-base text-red-700 mb-4">
							Once you delete a product, there is no going back. Please be certain.
						</p>
						{{ include('product/_delete_form.html.twig') }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
